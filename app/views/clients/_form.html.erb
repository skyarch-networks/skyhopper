<%= form_for @client, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :code, t('clients.code'), class: 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.text_field :code, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, t('clients.name'), class: 'control-label col-sm-2'%>
    <div class="col-sm-5">
      <%= f.text_field :name, class: 'form-control', required: true %>
      <span></span>
    </div>
  </div>

  <div class="form-actions-top">
    <%= f.submit nil, class: 'btn btn-primary create'%>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
      clients_path, class: 'btn btn-default' %>
  </div>
<% end %>
