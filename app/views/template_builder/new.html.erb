<% provide(:title, I18n.t('template_builder.template_builder')) %>
<h1 class="page-header"><%= t 'template_builder.template_builder' %></h1>

<div class="col-md-12 col-sm-12 form-horizontal">
  <div class="form-group">
    <%= label :template, :name, t('cf_templates.subject'), class: 'control-label col-sm-2' %>
    <div class="col-sm-7">
      <%= text_field :template, :name, {class: 'form-control', required: true} %>
    </div>
  </div>

  <div class="form-group">
    <%= label :template, :detail, t('cf_templates.details'), class: 'control-label col-sm-2' %>
    <div class="col-sm-7">
      <%= text_area :template, :detail, class: 'form-control' %>
    </div>
  </div>
</div>

<h3 class="page-header"><%= t 'template_builder.resources' %></h3>

<div class="col-md-4 col-sm-4">
  <div class="well bg-white">
    <%= label :resources, :resources, t('template_builder.select_resources'), class: 'control-label' %>
    <%= select_tag 'resources[resources]', options_for_select(@resources), class: 'form-control' %>
  </div>

  <div id="resource-properties" class="well bg-white"></div>

  <button class="btn btn-default add-resource">
    <%= t 'template_builder.btn.add_resource' %>
  </button>

</div>

<div class="col-md-8 col-sm-8">
  <table class="table table-condensed" id="selected-resources">
    <thead>
      <tr>
        <th>Name</th>
        <th>Resource Type</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<div class="col-md-12 col-sm-12">
  <div class="form-actions-top">
    <button id="build-template" class="btn btn-primary"><%= t 'common.btn.submit' %></button>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
      cf_templates_path,
      class: 'btn btn-default' %>
  </div>
</div>
