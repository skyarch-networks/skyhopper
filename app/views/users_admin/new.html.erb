<% provide(:title, I18n.t('users.create_new_user')) %>
<div class="page-header">
  <h1><%= t('users.create_new_user') %></h1>
</div>
<%= form_for @user, url: {action: 'create'}, html: {class: "form-horizontal", role: "form"} do |f| %>

  <div class="form-group">
    <%= f.label t('users.email'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t('users.password'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.password_field :password, class: "form-control", required: true, pattern: '[^\s]+' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t('users.password_confirm'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation, class: "form-control", required: true, pattern: '[^\s]+' %>
    </div>
  </div>

  <div class="form-group">
    <div class="checkbox col-sm-offset-2 col-sm-1">
      <%= f.label :admin, f.check_box(:admin) + admin_label, {class: "col-sm-2"} %>
    </div>
    <div class="checkbox col-sm-2">
      <%= f.label :master, f.check_box(:master) + master_label, {class: "col-sm-2"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t('zabbix_servers.zabbix'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.select(:zabbix_servers, options_from_collection_for_select(@zabbix_servers, 'id', 'fqdn'), {}, {:multiple => true, :size => 10}) %>
    </div>
  </div>



  <div class="form-actions-top">
    <%= f.submit t('helpers.links.create'), class: "btn btn-primary create" %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
      users_admin_index_path,
      class: 'btn btn-default' %>
  </div>
<% end %>
