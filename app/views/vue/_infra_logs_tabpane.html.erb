<%#
Arguments:
  infra_logs
%>
<table class="table table-condensed" style="border-collapse:collapse;">
  <thead>
    <tr>
      <th>Operator</th>
      <th>Status</th>
      <th>Details</th>
      <th>at</th>
    </tr>
  </thead>
  <tbody v-repeat="log: infra_logs.logs" class="tbody-infra-log">
    <tr>
      <td><span v-if="log.admin" class="label label-info">admin</span>&nbsp;{{log.email}}</td>
      <td><span v-class="status_class(log.status)" v-text="status_text(log.status)" class="label"></span></td>
      <td>{{log.title}}<a v-if="log.long" href="#" data-toggle="collapse" data-target="#logbody-{{log.id}}" class="accordion-toggle btn btn-xs btn-link popovermore">...see all </a></td>
      <td v-text="log.created_at | toLocaleString"></td>
    </tr>
    <tr v-if="log.long">
      <td colspan="4" class="hidden-row">
        <div class="accordion-body collapse" id="logbody-{{log.id}}">
          <pre style="margin: 5px" v-text="log.details"></pre>
        </div>
      </td>
    </tr>
  </tbody>
</table>

<vue-paginator v-with="infra_logs.page"></vue-paginator>
